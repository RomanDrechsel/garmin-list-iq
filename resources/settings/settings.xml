<settings>
    <!-- App version (readonly) -->
    <setting propertyKey="@Properties.appVersion" title="@Strings.StAppVersion">
        <settingConfig type="alphaNumeric" readonly="true" />
    </setting>

    <!-- theme -->
    <setting propertyKey="@Properties.Theme" title="@Strings.SettingsTh">
        <settingConfig type="list">
            <listEntry value="0">@Strings.ThGrey</listEntry>
            <listEntry value="1">@Strings.ThRed</listEntry>
            <listEntry value="2">@Strings.ThBaW</listEntry>
            <listEntry value="3">@Strings.ThWaB</listEntry>
            <listEntry value="666">@Strings.ThBsoD</listEntry>
        </settingConfig>
    </setting>

    <!-- move done items to the end -->
    <setting propertyKey="@Properties.ListMoveDown" title="@Strings.StMoveBottom">
       <settingConfig type="boolean" />
    </setting>

    <!-- double tap set items done -->
    <setting propertyKey="@Properties.DoubleTapForDone" title="@Strings.StDoubleTapForDone">
        <settingConfig type="boolean" />
    </setting>

    <!-- show item notes -->
    <setting propertyKey="@Properties.ShowNotes" title="@Strings.StShowNotes">
        <settingConfig type="boolean" />
    </setting>

    <setting propertyKey="@Properties.AutoExit" title="@Strings.StAutoExit">
        <settingConfig type="list">
            <listEntry value="0">@Strings.StAutoExitOff</listEntry>
            <listEntry value="1">@Strings.StAutoExit1</listEntry>
            <listEntry value="3">@Strings.StAutoExit3</listEntry>
            <listEntry value="5">@Strings.StAutoExit5</listEntry>
            <listEntry value="10">@Strings.StAutoExit10</listEntry>
            <listEntry value="15">@Strings.StAutoExit15</listEntry>
            <listEntry value="30">@Strings.StAutoExit30</listEntry>
            <listEntry value="60">@Strings.StAutoExit60</listEntry>
        </settingConfig>
    </setting>

    <!-- store logs -->
    <setting propertyKey="@Properties.Logs" title="@Strings.StLogs">
        <settingConfig type="boolean" />
    </setting>

    <!-- store persistent logs-->
    <setting propertyKey="@Properties.PersistentLogs" title="@Strings.StPersistentLogs">
        <settingConfig type="boolean" />
    </setting>

</settings>
